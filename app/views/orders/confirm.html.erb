<div id="kirehashi"></div>
<%= render 'common/menu_btn' %>

<div id="main_container" class="flex">
  <%= render 'common/side_menu' %>
  <div class="triangle"></div>

  <div id="bg_main" class="order_detail top_space">
    <div class="confirm">
      <p class="form_info">買い物依頼を確定してもよろしいですか？</p>
      <table class="confirm_table">
        <tr>
          <th>買い物リスト</th>
          <td><%= @order_content %></td>
        </tr>
        <tr>
          <th>備考</th>
          <td><%= @order_note %></td>
        </tr>
        <tr>
          <th>終了期限</th>
          <td><%= l @order.deadline, format: :short %></td>
        </tr>
      </table>

      <div class="line_area">
        <%= image_tag 'line.png', class: 'line_image' %>
      </div>

      <div class="new_order_form_address">
        〒<%= current_user.postal_code %><br>
        <%= current_user.address %><br>
        <%= current_user.phone_number %>
        <p><%= current_user.family_name %><%= current_user.first_name %>様</p>
      </div>

      <%= form_with(model: @order, local: true, class: 'confirm_form') do |f| %>
        <%= f.hidden_field :content %>
        <%= f.hidden_field :note %>
        <%= f.hidden_field :deadline %>
        <div class="confirm_btn_area">
          <%= f.submit '戻る', name: 'back', class: 'btn common_btn btn_shadow_dark back_btn' %>
          <%= f.submit '依頼確定', class: 'btn common_btn btn_shadow_dark done_btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
