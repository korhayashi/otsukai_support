<div class="short_container yellow_container">
  <div class="triangle_area triangle_space"></div>
  <div class="short_form login_form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user_form' }) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: 'btn index_btn' %>
      </div>
    <% end %>

    <div class="test_btn_area">
      <%= link_to 'ゲストログイン（カスタマー）', users_guest_customer_sign_in_path, method: :post, class: 'btn test_btn test_btn_left btn_shadow' %>
      <%= link_to 'ゲストログイン（配達員）', users_guest_courier_sign_in_path, method: :post, class: 'btn test_btn btn_shadow' %>
    </div>

    <div class="form_info">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
