<div class="short_container">
  <div class="triangle no_scroll">
    <div class="short_form account_confirm_form">

      <h3><%= t('.forgot_your_password') %></h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'user_form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn index_btn' %>
        </div>
      <% end %>

      <div class="form_info">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
